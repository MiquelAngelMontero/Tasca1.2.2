<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/texte_data_incidencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data"
                app:layout_constraintStart_toStartOf="@+id/texte_descripcio_incidencia"
                app:layout_constraintTop_toBottomOf="@+id/texte_descripcio_incidencia" />

            <TextView
                android:id="@+id/texte_tipus_incidencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipus"
                app:layout_constraintStart_toStartOf="@+id/texte_element_incidencia"
                app:layout_constraintTop_toBottomOf="@+id/texte_element_incidencia" />

            <TextView
                android:id="@+id/texte_descripcio_incidencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Descripció"
                app:layout_constraintStart_toEndOf="@+id/texte_element_incidencia"
                app:layout_constraintTop_toBottomOf="@+id/texte_nom_incidencia" />

            <TextView
                android:id="@+id/texte_ubicacio_incidencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Ubicació"
                app:layout_constraintStart_toEndOf="@+id/texte_nom_incidencia"
                app:layout_constraintTop_toTopOf="@+id/texte_nom_incidencia" />

            <TextView
                android:id="@+id/texte_id_inciencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/texte_nom_incidencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Nom"
                app:layout_constraintStart_toEndOf="@+id/texte_id_inciencia"
                app:layout_constraintTop_toTopOf="@+id/texte_id_inciencia" />

            <TextView
                android:id="@+id/texte_element_incidencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Element"
                app:layout_constraintStart_toStartOf="@+id/texte_nom_incidencia"
                app:layout_constraintTop_toBottomOf="@+id/texte_nom_incidencia" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>